<Page x:Class="OOP2V10.View.pageCenovnik"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OOP2V10.View"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="Cenovnik">

    <StackPanel>
        <TextBlock Text="Cena po satu" HorizontalAlignment="Center" />
        <TextBox Text="{Binding Cenovnik.CeneSat}"/>
        <TextBlock Text="Cena po danu" HorizontalAlignment="Center" />
        <TextBox Text="{Binding Cenovnik.CeneDan}"/>
        <TextBlock Text="Broj parking mesta" HorizontalAlignment="Center" />
        <TextBox Text="{Binding Cenovnik.BrMesta}"/>
        <Button Content="Snimi" Width="100" Padding="5" Click="Button_Click"/>
    </StackPanel>
</Page>
